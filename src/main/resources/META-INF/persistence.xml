<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>com.example.giftefrei.model.CompanyEntity</class>
        <class>com.example.giftefrei.model.InternEntity</class>
        <class>com.example.giftefrei.model.InternGroupEntity</class>
        <class>com.example.giftefrei.model.InternshipEntity</class>
        <class>com.example.giftefrei.model.SupervisorEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://db:5432/giftefrei"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="postgres"/>
            <property name="eclipselink.jdbc.password" value="postgres"/>
        </properties>
    </persistence-unit>
</persistence>
